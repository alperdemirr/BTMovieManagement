@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<OMDBMovieList>

@if (TempData["err"] != null)
{
    <div class="alert alert-warning">
        @TempData["err"]
    </div>
}
@foreach (var item in Model)
{
    <div class="col-lg-4">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@item.Poster" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Title - @item.Year</h5>
                <a asp-action="Update" asp-controller="Movie" asp-route-Id="@item.Id" class="btn btn-primary">Güncelle</a>
                <form asp-action="Delete" asp-controller="Movie" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <input type="submit" value="Sil" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>

}